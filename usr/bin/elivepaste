#!/bin/bash
source /usr/lib/elive-tools/functions

main(){
   # pre {{{
   local url buffer syntax syntax_filetype max_lines user min_lines direct_paste command is_stdin

   if ! el_check_dependencies pastebinit ; then
	   el_error "Please install the package pastebinit first"
   fi

   if [[ ! -t 0 ]] ; then
	   is_stdin=1
   fi

   unset LANG LANGUAGE LC_ALL LC_MESSAGES

   # }}}

   # variables
   max_lines="500"
   min_lines="10"
   user="$USER"
   command="$@"

   # show help if no parameters
   if [[ -z "$1" ]] && ! ((is_stdin)) ; then
	   el_error "Usage: $(basename $0) command to run with parameters"
	   el_explain 0 "example: $(basename $0) cat file.c"
	   el_explain 0 "example: $(basename $0) esu -d thunar"
	   el_explain 0 "__note__: you can also do things like: __apui elive-tools | $(basename $0)__, this is useful if you want to run it from alias or in other ways"
	   exit 1
   fi

   # run and save output
   if ((is_stdin)) ; then
	   buffer="$(cat)"
	   command="(piped)"
   else
	   buffer="$( "$@" 2>&1 | sed -r "s/\x1B\[([0-9]{1,2}(;[0-9]{1,2})?)?[m|K]//g" )"
	   echo "$buffer"
   fi

   # set syntax {{{
   syntax_filetype="$( echo -e "$buffer" | file - )"

   case "$syntax_filetype" in
	   *Bourne-Again*shell*script*)
		   syntax="bash"
		   ;;
	   *ASCII\ C\ program*|*C\ source*)
		   syntax="c"
		   ;;
	   *python\ script*)
		   syntax="python"
		   ;;
	   *diff*)
		   syntax="diff"
		   ;;
	   *makefile*)
		   syntax="make"
		   ;;
	   *)
		   syntax="text"
		   ;;
   esac

   # - set syntax }}}

   # checks {{{

   # empty ?
   if [[ -z "$buffer" ]] ; then
	   el_debug "buffer empty, ignoring..."
	   exit 1
   fi

   # max lines allowed
   if [[ "$(echo -e "${buffer}" | wc -l)" -gt "$max_lines" ]] ; then
	   el_error "Output lines are bigger than 500, too long paste, ignoring..."
	   exit 1
   fi

   if [[ "$(echo -e "${buffer}" | wc -l)" -le "$min_lines" ]] ; then
	   direct_paste=1
   fi
   # - checks }}}

   # get url
   if ! ((direct_paste)) ; then

	   url="$( { echo "$ $command" ; echo "${buffer}" ; } | pastebinit -a "$user" -f "${syntax}" | head -1 )"

	   if ! echo "${url}" | grep -q "http://" ; then
		   el_error "URL not get correctly: $url"
		   exit 1
	   fi
   fi

   # sent
   if ps ux | grep -v grep | grep -q xchat && el_check_dependencies xchat ; then
	   if ((direct_paste)) ; then
		   xchat -e -c "msg #elive \$ $command"
		   xchat -e -c "msg #elive $buffer"
	   else
		   xchat -e -c "msg #elive [$command] $url"
	   fi
	   echo ""
	   el_explain 0 "output sent to the #elive channel"
   else
	   # save it to clipboard, right-click mouse ready
	   if el_check_dependencies xclip ; then
		   echo "$url" | xclip -i
	   fi

	   # finally show the url in the terminal
	   echo -e ""
	   el_explain 0 "Paste available in: __$url__"
	   echo "$url"
   fi
}

#
#  MAIN
#
main "$@"

# vim: set foldmethod=marker :
